module rom (
    input address[6], 
    output inputa[16],
    output inputb[16],
    output alufn[6],
    output romvalue[16]
  ) {
  
  //hardcoded test cases
  
  const ROM_ALU = {16b0101010101010101, 16b0000000000000001, 16b0000000000000001, 16b0000000000000001, 16b1111111111111111, 16b0000000000000001, 16b0000000000000100, 16b1111111111111111, 16b1111111111111111, 16b0000000000000000, 16b0000000000000110, 16b0000000000000001, 16b0000000000000000, 
                   16b0111111111111111};  
  always {
    
      romvalue = ROM_ALU[address];
    
    //testcase1
    case(address){
    
      6b000000:
        inputa = 16b0000000000000000;
        inputb = 16b0111111111111111;
        alufn = 6b000000;
        
      6b000001:
        inputa = 16b1000011111111111;
        inputb = 16b1000011111111111;
        alufn = 6b000001;
        
      6b000010:
        inputa = 16b0000000000000011;
        inputb = 16b0000000000000010;
        alufn = 6b000100;
        
      6b000011:
        inputa = 16b0000000000000010; 
        inputb = 16b0000000000000011; 
        alufn = 6b000010; 
        
      6b000100:
      inputa = 16b1111110000000000;
      inputb = 16b0000001111111111;
      alufn = 6b011000;
        
      6b000101: 
      inputa = 16b1010101010101010;
      inputb = 16b0101010101010101;
      alufn = 6b011110;  
        
      6b000110: 
      inputa = 16b1111000011110000;
      inputb = 16b0000111100001111;
      alufn = 6b010110; 
        
      6b000111: 
      inputa = 16b0000000000000010; 
      inputb = 16b0000000000000001; 
      alufn = 6b100000;  
        
      6b001000: 
      inputa = 16b0000000000000010; 
      inputb = 16b0000000000000001; 
      alufn = 6b100001; 
        
      6b001001: 
      inputa = 16b1111111111111110; 
      inputb = 16b0000000000000001; 
      alufn = 6b100011; 
      
      6b001010: 
      inputa = 16b0000000000001010; 
      inputb = 16b0000000000001010; 
      alufn = 6b110011; 
        
      6b001011: 
      inputa = 16b0000000000000111; 
      inputb = 16b0000000000001000; 
      alufn = 6b110101; 
        
      6b001100: 
      inputa = 16b0000000000001000; 
      inputb = 16b0000000000001000; 
      alufn = 6b110111; 
        
      6b001101:
      inputa = 16b0101010101010101; 
      inputb = 16b1010101010101010; 
      alufn = 6b011010;
        
    default:
       inputa = 16b0;
       inputb = 16b0;
       alufn = 6b0;                                                                                                                                                                   
    }
     
}